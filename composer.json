{
    "name": "airlst/phpstan-config",
    "description": "PHPStan config for AirLST projects",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "airlst",
        "phpstan",
        "phpstan-config"
    ],
    "authors": [
        {
            "name": "Orkhan Ahmadov",
            "email": "hey@orkhan.dev",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/airlst/phpstan-config",
    "require": {
        "php": "^8.3",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan": "2.0.3",
        "phpstan/phpstan-deprecation-rules": "2.0.1",
        "phpstan/phpstan-strict-rules": "2.0.0",
        "rector/type-perfect": "2.0.0",
        "spaze/phpstan-disallowed-calls": "4.0.1",
        "tomasvotruba/type-coverage": "2.0.0"
    },
    "require-dev": {
        "airlst/php-cs-fixer-config": "^3.1.0",
        "ergebnis/composer-normalize": "^2.45.0"
    },
    "autoload": {
        "psr-4": {
            "Airlst\\PhpstanConfig\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "phpstan": {
            "includes": []
        }
    },
    "scripts": {
        "ci": [
            "@composer normalize",
            "@rector",
            "@cs-fixer",
            "@phpstan"
        ],
        "cs-fixer": "./vendor/bin/php-cs-fixer fix",
        "phpstan": "./vendor/bin/phpstan analyse -c phpstan.php",
        "rector": "./vendor/bin/rector"
    }
}
